<header>
  <h1>Tasks</h1>
  <%= yield :tasks_stats %>
  <nav>
    <ul>
      <% if logged_in? %>
        <li>
          <%= t("user.greeting", name: current_user.name) %>
        </li>
        <li>
          <%= button_to t("buttons.logout"), logout_path, method: "delete" %>
        </li>
      <% else %>
        <li>
          <%= link_to t("menu.signup"), signup_path %>
        </li>
        <li>
          <%= link_to t("menu.login"), login_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
