<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <% for type, message in flash %>
    <p class="<%= type %> message">
      <%= message %>
    </p>
  <% end %>

  <%= link_to t("menu.signup"), "/signup" %>
  <%= link_to t("menu.login"), "/login" %>

  <% if logged_in? %>
    <%= t("user.greeting", name: current_user.name) %>
    <%= button_to t("buttons.logout"), "/logout", method: "delete" %>
  <% end %>

  <%= yield %>

  </body>
</html>
