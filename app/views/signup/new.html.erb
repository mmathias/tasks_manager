<h1>Signup</h1>

<% if @user.errors.any? %>
  <p>
    <%= t("form.error_message") %>
  </p>

  <ul>
    <% for message in @user.errors.full_messages %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user, url: "/signup" do |f| %>

  <p>
    <%= f.label :name, t("labels.user.name") %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, t("labels.user.email") %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :login, t("labels.user.login") %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password, t("labels.user.password") %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, t("labels.user.password_confirmation") %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>
